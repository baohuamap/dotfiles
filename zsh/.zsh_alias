# alias for zsh
#

alias cls=clear
alias vim=nvim

alias ls="eza --color=always --long --no-filesize --icons=always --no-time --no-user --no-permissions"
alias ll="eza -l -g --icons"
alias lla="ll -a"

alias cd="z"

# alias for python venv
alias venv="if [ -e ./.venv/bin/activate ]; then source ./.venv/bin/activate; else python3 -m venv .venv && source ./.venv/bin/activate; fi"
alias venv3.10="if [ -e ./.venv/bin/activate ]; then source ./.venv/bin/activate; else python3.10 -m venv .venv && source ./.venv/bin/activate; fi"
alias venv3.9="if [ -e ./.venv/bin/activate ]; then source ./.venv/bin/activate; else python3.9 -m venv .venv && source ./.venv/bin/activate; fi"
alias base="if [ -e ~/Python_env/base/.venv/bin/activate ]; then source ~/Python_env/base/.venv/bin/activate; else python3 -m venv ~/Python_env/base/.venv/ && source ~/Python_env/base/.venv/bin/activate; fi"

alias reload-zsh="source ~/.zshrc"
alias edit-zsh="nvim ~/.zshrc"
alias edit-zsh-dx="nvim ~/dx_conf"

alias gpl="git pull"
alias gps="git push"

alias ide="~/.scripts/ide"
alias pwned="~/.scripts/pwned"

function setenv { export $(grep -v '^#' .env | xargs -0); }
function unsetenv { unset $(grep -v '^#' .env | sed -E 's/(.*)=.*/\1/' | xargs); }

alias yd="ydiff -s -w0"
